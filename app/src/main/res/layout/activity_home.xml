<!-- activity_home.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/homebkg"
    tools:context=".HomeActivity">

    <!-- App Logo -->
    <ImageView
        android:id="@+id/imageViewLogo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/app_logo"
        android:contentDescription="App Logo"/>

    <!-- Button to go to SignUp Page -->
    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageViewLogo"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_background"
        android:drawableTop="@drawable/signup_icon_resize"
        android:padding="0dp"
        android:text="Sign Up"
        android:textColor="@android:color/white"
        android:gravity="center"/>

    <!-- Button to go to Login Page -->
    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnSignUp"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_background"
        android:drawableTop="@drawable/login_icon_resized"
        android:padding="16dp"
        android:text="Login"
        android:textColor="@android:color/white"
        android:gravity="center"/>

    <!-- Button to see High Scores -->
    <Button
        android:id="@+id/btnHighScores"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnLogin"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_background"
        android:drawableTop="@drawable/highscores_icon_resize"
        android:padding="16dp"
        android:text="High Scores"
        android:textColor="@android:color/white"
        android:gravity="center"/>

    <!-- Button to go to Options Page -->
    <Button
        android:id="@+id/btnOptions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnHighScores"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_background"
        android:drawableTop="@drawable/options_icon_resized"
        android:padding="16dp"
        android:text="Options"
        android:textColor="@android:color/white"
        android:gravity="center"/>
</RelativeLayout>
